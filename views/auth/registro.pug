extends ../layout/index

block contenido
  div.py-10 
    h1.text-4xl.my-2.font-extrabold.text-center Bienes 
      spam.font-normal Raices 
    h2.text-center.text-2xl.font-extrabold= Pagina

    .mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow  

        form.space-y-5(method="POST" actions="/auth/registro")
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Tu Nombre
            input#nombre.w-full.px-3.py-2.bold.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="tu nombre" type="text" name="nombre")

          div 
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Tu Email
            input#email.w-full.px-3.py-2.bold.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="tu email" type="email" name="email")

          div 
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Tu Password
            input#passwword.w-full.px-3.py-2.bold.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="password" type="password" name="password")

            
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repetirPassword") Repetir Password
            input#repetirPassword.w-full.px-3.py-2.bold.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="repetir password" type="password" name="repetirPassword")

          div.flex.item-center.justify-between 
            a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión 
            a.text-gray-500.text-xs(href="/auth/olvidePassword") Olvide mi password
            
          input(class="w-full rounded bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer " type="submit" value="Crear Cuenta")